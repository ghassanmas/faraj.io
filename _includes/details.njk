<details id="details_{{ loop.index }}">
  <summary class="summary">Samples</summary>
  <ol class="list">
    {% for item in item.summary %}
      <li class="list_item summary_item">
        <div class="con_sum_head">
          <h4 class="summary_item_header">
            {{ item.name }}
          </h4>
          <a class="link_external" target="_blank" href="{{ item.link }}" title="{{ item.name }} rel="noopener noreferrer">
          <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-external-link">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" /><path d="M11 13l9 -9" /><path d="M15 4h5v5" /></svg>            
             </a>
          </div>
          <p class="sum_techs">
            <span class="bold">What</span>: {{ item.description }}
          </p>
          <p class="sum_techs">
            <span class="bold">Used</span>:
            {% for tech in item.techs %}
              {{ tech }}{% if not loop.last %}, {% endif %}
            {% endfor %}
          </p>
        </li>
      {% endfor %}
    </ol>
  </details>